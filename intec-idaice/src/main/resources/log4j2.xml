<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="INFO">
  <Appenders>
    <Console name="Console" target="SYSTEM_OUT">
      <PatternLayout pattern="%d{HH:mm:ss.SSS} %logger{36}:%L %-5level - %msg%n"/>
    </Console>
  </Appenders>
  <Loggers>
    <Logger name="GrovePi" level="warn"/>
    <Logger name="org" level="debug"/>
    <Logger name="org.springframework" level="info"/>
    <Logger name="org.glassfish" level="trace"/>
    <Root level="trace">
      <AppenderRef ref="Console"/>
    </Root>
  </Loggers>
</Configuration>